            <thead>
            <th>ID</th>
            <th>Mã</th>
            <th>Tên</th>
            <th>Action</th>
            </thead>
            <tbody>
            <c:forEach var="s" items="${LISTDSP}">
                <tr>
                    <td>${s.id}</td>
                    <td>${s.ma}</td>
                    <td>${s.ten}</td>
                    <td>
                        <a href="/dongSP/detail/${s.id}" class="btn btn-success">Detail</a>
                        <a href="/dongSP/view-update/${s.id}" class="btn btn-primary">Update</a>
                        <a href="/dongSP/delete/${s.id}" onclick="return confirm('Bạn có muốn xóa sản phẩm này k')" class="btn btn-danger">Delete</a>
